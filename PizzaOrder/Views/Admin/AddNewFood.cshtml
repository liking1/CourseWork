@model PizzaOrder.Models.ViewModel.FoodViewModel;

<div style="margin-top: 100px; color: white;">
    <form method="post" asp-action="AddNewFood">
        <h2 class="mb-3">Create a new product</h2>
        <div class="form-group row">
            <label asp-for="Food.Title" class="col-4"></label>
            <input id="modelInput" asp-for="Food.Title" class="form-control col-8">
            <span asp-validation-for="Food.Title" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Food.Description" class="col-4"></label>
            <textarea asp-for="Food.Description" class="form-control col-8 summernote" style="background-color: black;color:#fff;"></textarea>
            <span asp-validation-for="Food.Description" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Food.CategoryId" class="col-4"></label>
            <select asp-for="Food.CategoryId" asp-items="@Model.Category" class="col-8">
                <option disabled>--Select Category--</option>
            </select>
            <span asp-validation-for="Food.CategoryId" class="offset-4 text-danger"></span>
        </div>  
        <div class="form-group row">
            <label asp-for="Food.Price" class="col-4"></label>
            <input asp-for="Food.Price" class="form-control col-8">
            <span asp-validation-for="Food.Price" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Food.Weight" class="col-4"></label>
            <input asp-for="Food.Weight" class="form-control col-8">
            <span asp-validation-for="Food.Weight" class="offset-4 text-danger"></span>
        </div>
         <div class="form-group row">
            <label asp-for="Food.Image" class="col-4"></label>
            <input asp-for="Food.Image" class="form-control col-8">
            <span asp-validation-for="Food.Image" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row mb-5">
            <a asp-controller="Category" class="col-6" asp-action="Index">Edit categories</a>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="submit" onclick="validateInputs()" class="btn btn-success w-100" value="Create" />
            </div>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-dark w-100">Back</a>
            </div>
        </div>
    </form>
</div>

@* Client Validation *@
@section Scripts
{
    @{ <partial name="_ValidationScriptsPartial.cshtml"/> }
    <script>
        function validateInputs() {
            const modelInput = document.getElementById("modelInput");
            if (modelInput.value == "") {
                Swal.fire({
                    title: 'Error!',
                    text: 'You must enter a valid model!',
                    icon: 'error',
                    confirmButtonText: 'Ok'
                });
            }
        }
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 100
            });
        });
    </script>
}