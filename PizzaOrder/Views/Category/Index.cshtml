@model IEnumerable<PizzaOrder.Models.Category>

@{
    ViewData["Title"] = "Categories";
}
<div style="margin-top: 100px;">
    <h1 class="mb-5">Categories List</h1>
    <div class="mb-2 text-right">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
    </div>
    <div class="list-group">
        <table>
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <div class="btn-group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-secondary">Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

