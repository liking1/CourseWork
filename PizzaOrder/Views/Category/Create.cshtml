@model PizzaOrder.Models.Category;

<div style="margin-top: 100px;">
    <form method="post" asp-action="Create">
        <h2 class="mb-3">Create a new category</h2>
        <div class="form-group row">
            <label asp-for="Name" class="col-4"></label>
            <input id="modelInput" asp-for="Name" class="form-control col-8">
            <span asp-validation-for="Name" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="submit" onclick="validateInputs()" class="btn btn-success w-100" value="Create" />
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-dark w-100">Back</a>
            </div>
        </div>
    </form>
</div>

@* Client Validation *@
@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial.cshtml" />
    }
<script>
        function validateInputs() {
            const modelInput = document.getElementById("modelInput")
            if(modelInput.value == ""){
                Swal.fire({
                title: 'Error!',
                text: 'You must enter a valid model!',
                icon: 'error',
                confirmButtonText: 'Ok'
                })
            }
        }
</script>
}